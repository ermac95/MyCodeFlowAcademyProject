<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/details_bg_color">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="298dp"
            android:background="@drawable/details_top_image_bg"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/movie_details_back_button"
            android:layout_width="6dp"
            android:layout_height="9dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="60dp"
            android:src="@drawable/top_back_arrow"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="28dp"
            android:layout_height="16dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="56dp"
            android:text="Back"
            android:textColor="@color/top_section_text_color"
            android:textSize="12sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/age_restriction_bg"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="222dp"
            android:background="@drawable/pagi_number_rectangle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="24dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:text="@string/details_page_text"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:gravity="center"
            app:layout_constraintEnd_toEndOf="@id/age_restriction_bg"
            app:layout_constraintTop_toTopOf="@+id/age_restriction_bg" />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_end="433dp" />

        <TextView
            android:id="@+id/details_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:padding="0dp"
            android:text="@string/details_avengers_title"
            android:textColor="@color/details_title_color"
            android:textSize="40sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/age_restriction_bg" />

        <TextView
            android:id="@+id/details_category_tags"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            android:text="@string/details_category_title"
            android:textColor="@color/details_category_tags"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/details_title" />

        <ImageView
            android:id="@+id/details_first_star"
            android:layout_width="13dp"
            android:layout_height="12dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/star_icon_on"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/details_category_tags" />

        <ImageView
            android:id="@+id/details_second_star"
            android:layout_width="13dp"
            android:layout_height="12dp"
            android:layout_marginStart="32.27dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/star_icon_on"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/details_category_tags" />

        <ImageView
            android:id="@+id/details_third_star"
            android:layout_width="13dp"
            android:layout_height="12dp"
            android:layout_marginStart="48.55dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/star_icon_on"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/details_category_tags" />

        <ImageView
            android:id="@+id/details_fourth_star"
            android:layout_width="13dp"
            android:layout_height="12dp"
            android:layout_marginStart="64.82dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/star_icon_on"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/details_category_tags" />

        <ImageView
            android:id="@+id/details_fifth_star"
            android:layout_width="13dp"
            android:layout_height="12dp"
            android:layout_marginStart="81.09dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/star_icon_off"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/details_category_tags" />

        <TextView
            android:id="@+id/review_name"
            android:layout_width="112dp"
            android:layout_height="20dp"
            android:layout_marginStart="8.89dp"
            android:layout_marginTop="4dp"
            android:text="125 REVIEWS"
            android:textColor="@color/top_section_text_color"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/details_fifth_star"
            app:layout_constraintTop_toBottomOf="@+id/details_category_tags" />

        <TextView
            android:id="@+id/storyline_title"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:text="@string/details_storyline"
            android:textColor="@color/details_title_color"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/review_name" />

        <TextView
            android:id="@+id/storyline_text"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            android:gravity="center_vertical"
            android:text="@string/storyline_body_text"
            android:textColor="@color/description_text"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/storyline_title" />

        <TextView
            android:id="@+id/cast_title"
            android:layout_width="match_parent"
            android:layout_height="24dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="116dp"
            android:gravity="center_vertical"
            android:text="@string/detail_cast"
            android:textColor="@color/details_title_color"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/storyline_text" />

        <ImageView
            android:id="@+id/cast_image1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="7dp"
            android:background="@drawable/cast_bg_round_shape"
            android:src="@drawable/robert_djr"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@+id/cast_image2"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_chainStyle="spread_inside"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/cast_title" />

        <ImageView
            android:id="@+id/cast_image2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="7dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/cast_bg_round_shape"
            android:src="@drawable/chris_evans"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@+id/cast_image3"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/cast_image1"
            app:layout_constraintTop_toBottomOf="@id/cast_title" />

        <ImageView
            android:id="@+id/cast_image3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="7dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/cast_bg_round_shape"
            android:src="@drawable/robert_d"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toStartOf="@+id/cast_image4"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/cast_image2"
            app:layout_constraintTop_toBottomOf="@id/cast_title" />

        <ImageView
            android:id="@+id/cast_image4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="7dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/cast_bg_round_shape"
            android:src="@drawable/chris_h"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/cast_image3"
            app:layout_constraintTop_toBottomOf="@id/cast_title" />

        <TextView
            android:id="@+id/cast_image_title1"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@string/robert_downey_jr"
            android:textColor="@color/cast_titles"
            android:textSize="12sp"
            android:textStyle="bold"
            android:gravity="left"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/cast_image1"
            app:layout_constraintStart_toStartOf="@id/cast_image1"/>

        <TextView
            android:id="@+id/cast_image_title2"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@string/chris_evans"
            android:textColor="@color/cast_titles"
            android:textSize="12sp"
            android:textStyle="bold"
            android:gravity="left"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/cast_image2"
            app:layout_constraintStart_toStartOf="@id/cast_image2"/>

        <TextView
            android:id="@+id/cast_image_title3"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@string/mark_ruffalo"
            android:textColor="@color/cast_titles"
            android:textSize="12sp"
            android:textStyle="bold"
            android:gravity="left"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/cast_image3"
            app:layout_constraintStart_toStartOf="@id/cast_image3"/>

        <TextView
            android:id="@+id/cast_image_title4"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="@string/chris_hemsworth"
            android:textColor="@color/cast_titles"
            android:textSize="12sp"
            android:textStyle="bold"
            android:gravity="left"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/cast_image4"
            app:layout_constraintStart_toStartOf="@id/cast_image4"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>


